# Put your environment variables here

# Personal information
export NAME='Jon Boone'
export EMAIL='ipmonger@delamancha.org'

# Preferred programs
export PAGER=less
export ALTERNATE_EDITOR=''
export EDITOR='emacsclient -t'
export VISUAL='emacsclient -c -a emacs'

# Language
export LANG='en_US.UTF-8'
export LC_ALL=$LANG
export LC_COLLATE=$LANG
export LC_CTYPE=$LANG
export LC_MESSAGES=$LANG
export LC_MONETARY=$LANG
export LC_NUMERIC=$LANG
export LC_TIME=$LANG

# Path settings
pathprepend /home/iain/.local/cmucl/latest CMUCLPATH
pathprepend ${CMUCLPATH}/bin PATH

pathprepend /home/iain/.local/sbcl/latest SBCLPATH
pathprepend ${SBCLPATH}/bin PATH

pathprepend ${HOME}/.local/emacs/bin PATH

pathprepend ~/bin PATH
pathprepend ~/lib LD_LIBRARY_PATH
pathprepend ~/include CPATH

# The current directory should never be in $PATH
pathremove . PATH
pathremove "" PATH

# TeXLive 2020 ENV Variables
export TEXMFHOME=${HOME}/texmf

# GITSTATUS
export GITSTATUS_LOG_LEVEL=DEBUG
